<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.wang.testface.DeleteUserActivity">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_weight="0.6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:text="@string/acount"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/delete_user_account_ev"
            android:hint="@string/input_acount"
            android:inputType="text"
            android:layout_weight="7"
            android:background="@drawable/text_border"
            android:layout_margin="2dp"
            android:padding="4dp"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:background="@color/hui"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>


    <TextView
        android:background="@drawable/text_border"
        android:layout_margin="2dp"
        android:padding="4dp"
        android:id="@+id/delete_result"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6" />

    <Button
        android:id="@+id/delete_group_btn"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="删除指定组的用户" />

    <Button
        android:id="@+id/delete_user_btn"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="删除所有组的用户" />


</LinearLayout>
